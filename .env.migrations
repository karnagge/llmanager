# Project settings
PROJECT_NAME=LLM Backend
VERSION=0.1.0
DEBUG=true
SHOW_API_DOCS=true
LOG_LEVEL=INFO
SECRET_KEY=super-secret-key-change-in-production

# API Settings
API_V1_STR=/api/v1
CORS_ORIGINS=["*"]

# Database settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=llmanager
POSTGRES_PASSWORD=llmanager_password
POSTGRES_DB=llmanager

# Redis settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# Security
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT_LIMIT=100
RATE_LIMIT_DEFAULT_PERIOD=3600

# Token Management
DEFAULT_TOKEN_QUOTA=100000
TOKEN_QUOTA_ALERT_THRESHOLD=0.9

# Model Settings
DEFAULT_MODEL=gpt-3.5-turbo
FALLBACK_MODEL=gpt-3.5-turbo
MAX_TOKENS=4096

# Webhook Settings
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=5

# Admin Settings
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin_password