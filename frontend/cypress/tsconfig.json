{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom", "dom.iterable"],
    "types": ["cypress", "node", "@testing-library/cypress"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "jsx": "preserve",
    "baseUrl": "../",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "files": [
    "env.d.ts"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../node_modules/cypress",
    "../node_modules/@testing-library/cypress/types"
  ],
  "exclude": [
    "../node_modules/cypress/cypress.config.ts"
  ]
}
